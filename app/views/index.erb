<div class="main-wrapper">
  <div class="content">
    <div class="players">
      <h1>Top Players</h1>
      <% if @players.length > 0 %>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>id</th>
              <th>email</th>
              <th>random enable</th>
              <th>Vic/Def/Dra</th>
            </tr>
          </thead>
          <tbody>
            <% @players.each do |player| %>
              <tr>
                <td><%= player.id %></td>
                <td><%= player.email %></td>
                <td><%= player.random_enable ? 'YES' : 'no' %></td>
                <td><%= "#{player.victory_total}/#{player.defeat_total}/#{player.draw_total}"  %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @players %>
      <% else %>
        <p>No players</p>
      <% end %>
    </div>
  </div>
