<div class="main-wrapper">
  <div class="content">
    <div class="games">
      <h1>Games</h1>
      <% if @games.length > 0 %>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>id</th>
              <th>Player</th>
              <th>Player</th>
              <th>Turn</th>
            </tr>
          </thead>
          <tbody>
            <% @games.each do |game| %>
              <tr>
                <td><a href="/moves/<%= game.id %>"><%= game.id %></a></td>
                <td><%= game.players[0].email %></td>
                <td><%= game.players[1].email %></td>
                <td><%= game.turn %></td>
              </tr> 
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No games</p>
      <% end %>
    </div>

    <div class="players">
      <h1>Players</h1>
      <% if @players.length > 0 %>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>id</th>
              <th>email</th>
              <th>random enable</th>
              <th>Vic/Def/Dra</th>
            </tr>
          </thead>
          <tbody>
            <% @players.each do |player| %>
              <tr>
                <td><%= player.id %></td>
                <td><%= player.email %></td>
                <td><%= player.random_enable ? 'YES' : 'no' %></td>
                <td><%= "#{player.victory_total}/#{player.defeat_total}/#{player.draw_total}"  %></td>
              </tr>
            <% end %>
          </tbody>
      <% else %>
        <p>No players</p>
      <% end %>
    </div>
  </div>
