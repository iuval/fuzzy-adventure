<div class="main-wrapper">
  <div class="content">
    <div class="players">
      <h1>Top Players</h1>
      <% if @players.length > 0 %>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Wants random game</th>
              <th>Vic</th>
              <th>Def</th>
              <th>Dra</th>
            </tr>
          </thead>
          <tbody>
            <% @players.each do |player| %>
              <tr>
                <td><%= player.name %></td>
                <td>
                  <% if player.random_enable %>
                    <span class="label label-success">yep</span>
                  <% else %>
                    <span class="label label-danger">nop</span>
                  <% end %>
                </td>
                <td><%= player.victory_total %></td>
                <td><%= player.defeat_total %></td>
                <td><%= player.draw_total %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @players %>
      <% else %>
        <p>No players</p>
      <% end %>
    </div>
  </div>
