<div class="main-wrapper">
  <div class="content">
    <h1>Game: <%= params[:game_id] %></h1>
    <div class="game">
       <dt>State</dt>
        <dd>
          <% if @game.ended %>
            <span class="label label-danger">Ended</span>
          <% else %>
            <span class="label label-success">Playing</span>
          <% end %>
        </dd>
       <dt>Player 1 ended</dt>
        <dd><%= @game.player_1_ended_game %></dd>
       <dt>Player 2 ended</dt>
        <dd><%= @game.player_2_ended_game %></dd>
    </div>
    <div class="moves">
      <% if @game.moves.length > 0 %>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Turn</th>
              <th>Player</th>
              <th>Data</th>
            </tr>
          </thead>
          <tbody>
            <% @moves.each do |move| %>
              <tr>
                <td><%= move.turn %></td>
                <td><%= move.player.email %></td>
                <td><%= move.data %></td>
              </tr> 
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No moves</p>
      <% end %>
    </div>
  </div>
