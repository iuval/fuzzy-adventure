<div class="main-wrapper">
  <div class="content">
    <div class="games">
      <h1>Games</h1>
      <% if @games.length > 0 %>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>id</th>
              <th>Player</th>
              <th>Player</th>
              <th>Turn</th>
            </tr>
          </thead>
          <tbody>
            <% @games.each do |game| %>
              <tr>
                <td><a href="/games/<%= game.id %>"><%= game.id %></a></td>
                <td><%= game.players[0].email %></td>
                <td><%= game.players[1].email %></td>
                <td><%= game.turn %></td>
              </tr> 
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @games %>
      <% else %>
        <p>No games</p>
      <% end %>
    </div>
  </div>
